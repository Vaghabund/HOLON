/* Reset + box-sizing */
* { box-sizing: border-box; margin: 0; padding: 0; }

:root {
  --base-font-size: 16px;
  --color-ink: #111111;
  --color-muted: #6b6b6b;
  --color-bg: #ffffff;
  --color-accent: #1a73e8;
  --max-width: 1200px;
}

/* Local font provided in assets/ */
@font-face {
  font-family: 'TangerineLocal';
  src: url('assets/Tangerine-Regular.otf') format('opentype');
  font-weight: 400;
  font-style: normal;
  font-display: swap;
}

html { font-size: var(--base-font-size); }
body {
  /* Use the local Tangerine font for all text, fall back to Inter/system fonts if unavailable */
  font-family: 'TangerineLocal', 'Inter', system-ui, -apple-system, 'Segoe UI', Roboto, 'Helvetica Neue', Arial;
  color: var(--color-ink);
  background: var(--color-bg);
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  line-height: 1.6;
  height: 100vh;
  overflow: hidden; /* disable vertical scrolling */
}

.container { width: 100%; max-width: var(--max-width); margin: 0 auto; padding: 0 20px; }

/* Kiosk horizontal layout styles */
.kiosk { height:100vh; width:100vw; overflow:hidden; }
.scroll-container {
  display:flex;
  flex-direction:row;
  height:100vh;
  overflow-x:auto;
  overflow-y:hidden;
  scroll-behavior:smooth;
  -webkit-overflow-scrolling:touch;
}

/* Allow JS-driven sliding on large screens; keep scroll behavior on small screens */
.scroll-container { transition: transform 0.6s cubic-bezier(.2,.9,.2,1); will-change: transform; }

/* hide scrollbar visually */
.scroll-container::-webkit-scrollbar { display:none; }
.scroll-container { -ms-overflow-style:none; scrollbar-width:none; }

/* Each panel is exactly one viewport wide and tall */
.panel { min-width:100vw; height:100vh; display:flex; align-items:center; justify-content:center; }

.panel-inner { width:100%; max-width:none; display:flex; gap:24px; align-items:stretch; justify-content:flex-start; flex-wrap:nowrap; padding:0; }

/* Reverse class for alternating order */
.panel.reverse .panel-inner { flex-direction:row-reverse; }

.media { display:flex; align-items:stretch; justify-content:center; flex:0 0 40%; max-width:40%; }
.media img { height:100vh; width:auto; max-width:100%; object-fit:cover; border-radius:0; box-shadow:none; }

/* Keep the last panel's image at (or below) its original size to avoid upscaling/pixelation */
.panel:last-child .media img {
  height: auto;            /* don't force full-viewport height */
  max-height: 90vh;       /* allow it to be large but not exceed viewport */
  width: auto;            /* preserve natural width */
  max-width: 100%;
  object-fit: contain;    /* don't crop or stretch */
}

.panel:last-child .media { align-items:center; justify-content:center; }

.text { flex:1 1 60%; max-width:60%; padding:0 24px; display:flex; flex-direction:column; justify-content:center; }

/* Make first panel image cover left-to-mid section for a stronger visual */
.panel:first-child .media { flex:0 0 55%; max-width:55%; }
.panel:first-child .text { flex:1 1 45%; max-width:45%; }

/* Make panels 2 and 3 images wider for stronger presence */
.panel:nth-of-type(2) .media,
.panel:nth-of-type(3) .media {
  flex: 0 0 50%;
  max-width: 50%;
}
.panel:nth-of-type(2) .text,
.panel:nth-of-type(3) .text {
  flex: 1 1 50%;
  max-width: 50%;
}
.text h1, .text h2 { font-family: 'TangerineLocal', 'Playfair Display', serif; margin-bottom:8px; font-weight:500; line-height:1.05; }
.text h1 { font-size: clamp(1.6rem, 4vw, 2.8rem); }
.text h2 { font-size: clamp(1.25rem, 3vw, 1.8rem); }
.text p { font-size: 1.05rem; color:var(--color-ink); line-height:1.9; font-weight:300; margin-bottom:1.4rem; }

/* Constrain readable measure inside the text container without shrinking the container itself */
.text > * { max-width: 450px; margin-left: 0; margin-right: 0; text-align: left; }

.text pre {
  /* match paragraph typography but preserve manual line breaks */
  font-family: inherit;
  font-size: 1.05rem;
  color: var(--color-ink);
  line-height: 1.9;
  font-weight: 300;
  margin-bottom: 1.4rem;
  white-space: pre-wrap; /* preserve line breaks, allow wrapping */
  background: transparent;
  border: none;
  padding: 0;
}

/* Headings constrained to the same measure and left-aligned */
.text h1, .text h2 { max-width: 450px; margin-left: 0; margin-right: 0; text-align: left; }

/* Small screens: stack image above text but keep each panel as one viewport */
@media (max-width: 700px) {
  .panel-inner { flex-direction:column; gap:18px; }
  .panel.reverse .panel-inner { flex-direction:column; }
  .media img { height:60vh; }
  .text { padding: 0 12px; text-align:center; }
}

/* Pager controls (desktop only) */
@media (min-width: 900px) {
  .scroll-container { overflow-x: hidden; }
  .pager { position: fixed; left: 50%; transform: translateX(-50%); bottom: 28px; display: flex; gap: 12px; align-items: center; z-index: 1200; }
  .pager-btn { background: #fff; border: 1px solid #e6e6e6; padding: 8px 12px; font-size: 20px; border-radius: 6px; cursor: pointer; box-shadow: 0 6px 18px rgba(0,0,0,0.06); }
  .pager-btn:active { transform: translateY(1px); }
  .pager-dots { display:flex; gap:8px; align-items:center; }
  .pager-dot { width:10px; height:10px; border-radius:50%; background:#ddd; }
  .pager-dot.active { background: var(--color-accent); }
}

/* First PDF page: center the image, hide the right text column and make media wider */
.panel.first-pdf .panel-inner { justify-content: center; }
.panel.first-pdf .media { flex: 0 0 80%; max-width: 80%; display:flex; align-items:center; justify-content:center; }
.panel.first-pdf .media img { object-fit: contain; width: 100%; height: auto; display:block; margin:0 auto; }
.panel.first-pdf .text { display: none; }

/* All other PDF pages: also centered, full width (no text column anymore) */
.panel:not(.first-pdf) .panel-inner { justify-content: center; }
.panel:not(.first-pdf) .media { flex: 0 0 70%; max-width: 70%; display:flex; align-items:center; justify-content:center; }
.panel:not(.first-pdf) .media img { object-fit: contain; width: auto; height: 100vh; max-width: 100%; display:block; margin:0 auto; }

